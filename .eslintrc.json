{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "plugins": ["import"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin", // Node.js modules (e.g., 'fs', 'path')
          "external", // Packages from 'node_modules'
          "internal", // Internal aliases like '@app/**'
          ["parent", "sibling"], // Relative imports
          "index", // Index files
          "object" // Dynamic imports
        ],
        "newlines-between": "always-and-inside-groups", // Requires newlines only between groups
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
